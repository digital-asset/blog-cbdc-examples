daml 1.2

module CBDCv2 where

import DA.Assert

template CBDCv2
  with
    issuer : Party
    owner : Party
    amount : Decimal
    currency : Text
  where
    signatory issuer

    controller owner can
      SimplifiedTransfer : ContractId CBDCv2
        with
          receiver : Party
        do
          create this with
            owner = receiver

cbdcv2Test : Scenario ()
cbdcv2Test = scenario do
  bank <- getParty "Central Bank"
  alice <- getParty "Alice"
  bob <- getParty "Bob"

  oldMoney <- submit bank do
    create CBDCv2 with
      issuer = bank
      owner = alice
      amount = 100.0
      currency = "USD"

  newMoney <- submit alice do
    exercise oldMoney SimplifiedTransfer with
      receiver = bob

  contract <- submit bob do
    fetch newMoney
  contract.owner === bob
