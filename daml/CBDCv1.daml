daml 1.2

module CBDCv1 where

template CBDCv1
  with
    issuer : Party
    owner : Party
    amount : Decimal
    currency : Text
    -- Additional relevant data...
  where
    signatory issuer

cbdcv1Test : Scenario ()
cbdcv1Test = scenario do
  bank <- getParty "Central Bank"
  alice <- getParty "Alice"
  bob <- getParty "Bob"

  submit bank do
    create CBDCv1 with
      issuer = bank
      owner = alice
      amount = 100.0
      currency = "USD"

  -- Alice cannot impersonate the Central Bank
  submitMustFail alice do
    create CBDCv1 with
      issuer = bank
      owner = alice
      amount = 100.0
      currency = "USD"
