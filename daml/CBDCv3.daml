daml 1.2

module CBDCv3 where

template CBDCv3
  with
    issuer : Party
    owner : Party
    amount : Decimal
    currency : Text
  where
    signatory issuer, owner

    -- Note: This won't work!
    controller owner can
      SimplifiedTransfer : ContractId CBDCv3
        with
          receiver : Party
        do
          create this with
            owner = receiver

cbdcv3Test : Scenario ()
cbdcv3Test = scenario do
  bank <- getParty "Central Bank"
  alice <- getParty "Alice"

  -- Central Bank cannot give money to Alice without her consent
  submitMustFail bank do
    create CBDCv3 with
      issuer = bank
      owner = alice
      amount = 100.0
      currency = "USD"

  money <-
    submit bank do
      create CBDCv3 with
        issuer = bank
        owner = bank
        amount = 100.0
        currency = "USD"

  submitMustFail bank do
    exercise money SimplifiedTransfer with
      receiver = alice
